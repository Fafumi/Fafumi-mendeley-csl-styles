<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0"
       class="in-text"
       name="Fafumi APA Numeric"
       default-locale="en-US">
  <info>
    <title>Fafumi APA Numeric</title>
    <id>http://www.zotero.org/styles/fafumi-apa-numeric</id>
    <link href="http://www.zotero.org/styles/fafumi-apa-numeric" rel="self"/>
    <author>
      <name>Fafumi</name>
    </author>
    <category citation-format="numeric"/>
    <category field="generic-base"/>
    <updated>2025-08-22T00:00:00+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>

  <!-- Citation (in-text) -->
  <citation collapse="citation-number">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout prefix="[" suffix="]" delimiter=",">
      <text variable="citation-number"/>
    </layout>
  </citation>

  <!-- Bibliography (reference list) -->
  <bibliography et-al-min="7" et-al-use-first="6" entry-spacing="1" line-spacing="2" hanging-indent="true">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout>
      <text prefix="[" variable="citation-number" suffix="] "/>
      <group delimiter=". ">
        <names variable="author">
          <name and="&amp;" initialize-with=". " delimiter=", "/>
        </names>
        <date variable="issued">
          <date-part name="year"/>
        </date>
        <text variable="title" font-style="italic"/>
        <group delimiter=", ">
          <text variable="container-title"/>
          <text variable="volume"/>
          <text variable="issue" prefix="(" suffix=")"/>
          <text variable="page"/>
        </group>
        <text variable="publisher"/>
        <text variable="DOI" prefix="https://doi.org/"/>
      </group>
    </layout>
  </bibliography>
</style>
