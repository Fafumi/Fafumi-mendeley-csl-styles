<?xml version="1.0" encoding="UTF-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0" class="in-text" default-locale="en-US">
  <info>
    <title>Numeric Harvard Hybrid</title>
    <id>http://www.zotero.org/styles/numeric-harvard-hybrid</id>
    <link href="http://www.zotero.org/styles/numeric-harvard-hybrid" rel="self"/>
    <author>
      <name>Your Name</name>
    </author>
    <category citation-format="numeric"/>
    <updated>2025-08-22T12:00:00+00:00</updated>
  </info>

  <!-- In-text citation: [1] -->
  <citation collapse="citation-number">
    <layout prefix="[" suffix="]" delimiter=",">
      <text variable="citation-number"/>
    </layout>
  </citation>

  <!-- Reference list -->
  <bibliography et-al-min="6" et-al-use-first="5" second-field-align="flush">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout>
      <text variable="author"/>
      <text prefix=", (" suffix="). " variable="issued"/>
      <text variable="title" suffix=". "/>
      <text variable="container-title" suffix=", "/>
      <text variable="volume" suffix=""/>
      <text prefix="(" suffix=")" variable="issue"/>
      <text prefix=", p." variable="page"/>
      <text prefix=". " variable="DOI"/>
    </layout>
  </bibliography>
</style>
